# PFC Consciousness API - Environment Configuration
# Copy this file to .env and customize for your environment

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=vertice_consciousness
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8001
API_WORKERS=4
LOG_LEVEL=info

# ============================================================================
# MIP Integration
# ============================================================================
MIP_ENABLED=true
MIP_API_URL=http://localhost:8000

# ============================================================================
# CORS Configuration
# ============================================================================
# Comma-separated list of allowed origins
# For development: *
# For production: https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGINS=*

# ============================================================================
# PGAdmin (Optional)
# ============================================================================
PGADMIN_EMAIL=admin@vertice.com
PGADMIN_PASSWORD=admin

# ============================================================================
# Production Settings
# ============================================================================
# Set to 'production' for production environment
ENVIRONMENT=development

# Enable debug mode (development only)
DEBUG=false

# Secret key for session management
SECRET_KEY=your_secret_key_here_change_in_production
