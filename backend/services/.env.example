# HCL Services - Docker Compose Environment Variables
# Copy this to .env and adjust as needed

# PostgreSQL
POSTGRES_DB=hcl_knowledge
POSTGRES_USER=hcl_user
POSTGRES_PASSWORD=hcl_password

# Kafka
KAFKA_BROKERS=kafka:9092

# Grafana
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin

# Services
LOG_LEVEL=INFO

# HCL Executor
K8S_NAMESPACE=default
IN_CLUSTER=false
DRY_RUN=true  # Set to false to actually execute K8s actions
ENABLE_ROLLBACK=true
