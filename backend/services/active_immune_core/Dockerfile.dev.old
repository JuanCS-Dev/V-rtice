# Active Immune Core Service - Development Dockerfile
# Optimized for fast iteration with hot reload

FROM python:3.11-slim

LABEL maintainer="Juan & Claude"
LABEL description="Active Immune Core Service - Development Mode"
LABEL version="1.0.0-dev"

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    g++ \
    libpq-dev \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Create app directory
WORKDIR /app

# Install Python dependencies
# Copy requirements first for better layer caching
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip setuptools wheel && \
    pip install --no-cache-dir -r requirements.txt

# Install development dependencies
RUN pip install --no-cache-dir \
    pytest \
    pytest-asyncio \
    pytest-cov \
    pytest-httpx \
    httpx \
    black \
    ruff \
    mypy

# Set environment for development
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV ACTIVE_IMMUNE_DEBUG=true
ENV ACTIVE_IMMUNE_LOG_LEVEL=DEBUG

# Expose service port
EXPOSE 8200

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8200/health || exit 1

# Run with hot reload (uvicorn --reload)
CMD ["python", "-m", "uvicorn", "api.main:app", "--host", "0.0.0.0", "--port", "8200", "--reload"]
