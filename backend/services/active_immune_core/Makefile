# ============================================================================
# INSTALLATION
# ============================================================================

install:
	@echo "ðŸ“¦ Installing production dependencies..."
	uv pip sync requirements.txt

dev:
	@echo "ðŸ“¦ Installing development dependencies..."
	uv pip install -e ".[dev]"

# ============================================================================
# TESTING
# ============================================================================

test-unit:
	@echo "ðŸ§ª Running unit tests (no external dependencies)..."
	@echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
	PYTHONPATH=. \
	VERTICE_LYMPHNODE_SHARED_SECRET=test-secret \
	python -m pytest -v -m "not integration" --tb=short
	@echo ""
	@echo "âœ… Unit tests completed!"

test-integration:
	@echo "ðŸ”— Running integration tests (requires test environment)..."
	@echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
	@echo "ðŸ” Checking if test environment is running..."
	@docker-compose -f docker-compose.test.yml ps 2>/dev/null | grep -q "Up" || \
		(echo "âŒ Test environment not running." && \
		 echo "   Start with: make test-env-up" && exit 1)
	@echo "âœ… Test environment is running"
	@echo ""
	PYTHONPATH=. \
	KAFKA_BOOTSTRAP_SERVERS=localhost:9092 \
	REDIS_URL=redis://localhost:6379/0 \
	ACTIVE_IMMUNE_POSTGRES_HOST=localhost \
	ACTIVE_IMMUNE_POSTGRES_PORT=5432 \
	ACTIVE_IMMUNE_POSTGRES_DB=immunis_memory_test \
	ACTIVE_IMMUNE_POSTGRES_USER=immune_user \
	ACTIVE_IMMUNE_POSTGRES_PASSWORD=immune_pass_test \
	VERTICE_LYMPHNODE_SHARED_SECRET=test-secret \
	python -m pytest api/core_integration/ -v -m integration --tb=short
	@echo ""
	@echo "âœ… Integration tests completed!"

test-all:
	@echo "ðŸ§ª Running all tests..."
	@echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
	PYTHONPATH=. python -m pytest -v --tb=short
	@echo ""
	@echo "âœ… All tests completed!"

test: test-all

test-coverage:
	@echo "ðŸ“Š Running tests with coverage..."
	@echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
	PYTHONPATH=. python -m pytest \
		--cov=. \
		--cov-report=term-missing \
		--cov-report=html \
		--cov-report=xml \
		--tb=short
	@echo ""
	@echo "âœ… Coverage report generated!"
	@echo "   HTML: htmlcov/index.html"
	@echo "   XML:  coverage.xml"

test-full:
	@echo "ðŸŽ¯ Full test cycle..."
	@echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
	$(MAKE) test-env-up
	@echo ""
	$(MAKE) test-all || ($(MAKE) test-env-down && exit 1)
	@echo ""
	$(MAKE) test-env-down
	@echo ""
	@echo "âœ… Full test cycle completed!"

# ============================================================================
# TEST ENVIRONMENT (DOCKER)
# ============================================================================

test-env-up:
	@echo "ðŸš€ Starting test environment..."
	@echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
	@docker-compose -f docker-compose.test.yml up -d
	@echo ""
	@echo "â³ Waiting for services to be healthy..."
	@timeout 60 sh -c '\
		while ! docker-compose -f docker-compose.test.yml ps | grep -q "healthy"; do \
			sleep 2; \
			echo "  Still waiting..."; \
		done' || \
		(echo "âŒ Services failed to become healthy" && \
		 echo "Logs:" && \
		 docker-compose -f docker-compose.test.yml logs --tail=50 && \
		 exit 1)
	@echo ""
	@echo "âœ… Test environment is ready!"
	@echo ""
	@echo "Services running:"
	@docker-compose -f docker-compose.test.yml ps
	@echo ""
	@echo "Environment variables for integration tests:"
	@echo "  KAFKA_BOOTSTRAP_SERVERS=localhost:9092"
	@echo "  REDIS_URL=redis://localhost:6379/0"
	@echo "  ACTIVE_IMMUNE_POSTGRES_HOST=localhost"
	@echo "  ACTIVE_IMMUNE_POSTGRES_DB=immunis_memory_test"

test-env-down:
	@echo "ðŸ›‘ Stopping test environment..."
	@echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
	docker-compose -f docker-compose.test.yml down -v
	@echo ""
	@echo "âœ… Test environment stopped and cleaned!"

test-env-status:
	@echo "ðŸ“Š Test environment status:"
	@echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
	@docker-compose -f docker-compose.test.yml ps 2>/dev/null || \
		echo "Test environment is not running"

# ============================================================================
# CODE QUALITY
# ============================================================================

lint:
	@echo "ðŸ” Checking code with ruff..."
	ruff check .

format:
	@echo "ðŸŽ¨ Formatting code with ruff..."
	ruff format .

fix:
	@echo "ðŸ”§ Fixing linting issues and formatting..."
	ruff check . --fix && ruff format .
	@echo "âœ… Code fixed and formatted!"

# ============================================================================
# MAINTENANCE
# ============================================================================

clean:
	@echo "ðŸ§¹ Cleaning cache and build artifacts..."
	find . -type d -name __pycache__ -exec rm -rf {} + 2>/dev/null || true
	find . -type d -name .pytest_cache -exec rm -rf {} + 2>/dev/null || true
	find . -type d -name .ruff_cache -exec rm -rf {} + 2>/dev/null || true
	find . -type f -name "*.pyc" -delete 2>/dev/null || true
	rm -rf .coverage coverage.xml htmlcov/ 2>/dev/null || true
	@echo "âœ… Cleanup completed!"

update:
	@echo "ðŸ“¦ Updating requirements.txt..."
	uv pip compile pyproject.toml -o requirements.txt
	@echo "âœ… Requirements updated!"
