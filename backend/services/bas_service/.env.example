# ============================================================================
# BREACH & ATTACK SIMULATION SERVICE - Environment Configuration
# ============================================================================

# Service Configuration
SERVICE_NAME=breach_attack_simulation
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8036
LOG_LEVEL=INFO

# Atomic Red Team
ATOMIC_RED_TEAM_PATH=/app/data/atomic-red-team
ATOMIC_AUTO_UPDATE=true
ATOMIC_UPDATE_INTERVAL_HOURS=24

# MITRE ATT&CK
ATTACK_NAVIGATOR_URL=https://mitre-attack.github.io/attack-navigator
ATTACK_VERSION=13.1

# Execution Configuration
DEFAULT_TIMEOUT_SECONDS=300
MAX_CONCURRENT_SIMULATIONS=10
ENABLE_CLEANUP=true
CLEANUP_TIMEOUT_SECONDS=120

# Purple Team Validation
ENABLE_DETECTION_VALIDATION=true
DETECTION_QUERY_INTERVAL_SECONDS=30
DETECTION_TIMEOUT_SECONDS=60
REQUIRE_DETECTION_CONFIRMATION=false

# SIEM Integration
SPLUNK_URL=
SPLUNK_TOKEN=
ELASTIC_URL=
ELASTIC_API_KEY=
SENTINEL_WORKSPACE_ID=
SENTINEL_SHARED_KEY=

# EDR Integration
CROWDSTRIKE_URL=
CROWDSTRIKE_CLIENT_ID=
CROWDSTRIKE_CLIENT_SECRET=
SENTINELONE_URL=
SENTINELONE_API_TOKEN=

# ASA Integration
ENABLE_ASA_INTEGRATION=true
SOMATOSENSORY_URL=http://somatosensory_service:8008
PREFRONTAL_CORTEX_URL=http://prefrontal_cortex_service:8011
AI_IMMUNE_SYSTEM_URL=http://ai_immune_system:8014

# SSH/Remote Execution
ENABLE_REMOTE_EXECUTION=true
SSH_DEFAULT_USER=bas_runner
SSH_KEY_PATH=/app/data/ssh/id_rsa
SSH_TIMEOUT_SECONDS=30

# PowerShell/WinRM (Windows)
ENABLE_WINRM=true
WINRM_DEFAULT_USER=bas_runner
WINRM_PASSWORD=
WINRM_TIMEOUT_SECONDS=30

# Reporting
GENERATE_COVERAGE_REPORTS=true
REPORT_OUTPUT_DIR=/app/data/reports

# Prometheus Metrics
METRICS_ENABLED=true
METRICS_PORT=9036

# Safety Limits
MAX_IMPACT_TECHNIQUES_PER_CAMPAIGN=5
REQUIRE_APPROVAL_FOR_IMPACT=true

# Development/Debug
DEBUG_MODE=false
VERBOSE_LOGGING=false
DRY_RUN_MODE=false
