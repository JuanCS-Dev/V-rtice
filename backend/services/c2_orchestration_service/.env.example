LOG_LEVEL=INFO

# Cobalt Strike Team Server
COBALT_STRIKE_HOST=localhost
COBALT_STRIKE_PORT=50050
COBALT_STRIKE_PASSWORD=
COBALT_STRIKE_USER=maximus_ai
COBALT_STRIKE_SSL_VERIFY=false

# Metasploit RPC
METASPLOIT_HOST=localhost
METASPLOIT_PORT=55553
METASPLOIT_USER=msf
METASPLOIT_PASSWORD=
