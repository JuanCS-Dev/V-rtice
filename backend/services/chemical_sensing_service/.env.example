# ═══════════════════════════════════════════════════════════════════════════
# CHEMICAL SENSING SERVICE - Environment Configuration
# Biomimetic Olfactory and Gustatory Processing for Cybersecurity
# ═══════════════════════════════════════════════════════════════════════════

# Server Configuration
HOST=0.0.0.0
PORT=8009
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# Olfactory System Configuration (Smell)
LATERAL_INHIBITION=0.3
ODOR_MEMORY_CONSOLIDATION_RATE=0.01
SCENT_TRAIL_MAX_LENGTH=1000

# Gustatory System Configuration (Taste)
TASTE_ADAPTATION_RATE=0.1
PALATE_CLEANSE_INTERVAL_SECONDS=300

# Metrics Configuration
METRICS_ENABLED=true
PROMETHEUS_PORT=8009

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Logging Configuration
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=/var/log/maximus/chemical_sensing.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# File Upload Limits
MAX_UPLOAD_SIZE_MB=10

# Optional: Advanced Features
ENABLE_ODOR_CLUSTERING=false
ENABLE_TASTE_MEMORY_CONSOLIDATION=false
SAVE_SCENT_TRAILS=false
SCENT_TRAIL_PATH=/data/scent_trails
