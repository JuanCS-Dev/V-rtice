# ============================================================================
# DIGITAL THALAMUS SERVICE - Environment Configuration
# Sensory Gateway and Attention Control for Maximus AI 3.0
# ============================================================================

# Service Configuration
SERVICE_NAME=digital_thalamus_service
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8012
LOG_LEVEL=INFO

# Sensory Gating Configuration
# Visual modality
VISUAL_MAX_IMAGE_SIZE=10485760  # 10MB
VISUAL_MAX_DIMENSIONS_WIDTH=4096
VISUAL_MAX_DIMENSIONS_HEIGHT=4096

# Auditory modality
AUDITORY_MAX_AUDIO_SIZE=52428800  # 50MB
AUDITORY_MAX_FREQUENCY=96000  # Hz

# Somatosensory modality
SOMATO_MAX_PAIN_INTENSITY=10.0
SOMATO_MAX_CPU_PERCENT=100.0
SOMATO_MAX_MEMORY_GB=1024.0

# Chemical modality
CHEMICAL_MAX_PAYLOAD_SIZE=104857600  # 100MB
CHEMICAL_MAX_ENTROPY=8.0

# Vestibular modality
VESTIBULAR_MAX_ROTATION_VELOCITY=360.0  # deg/s
VESTIBULAR_MAX_ACCELERATION=100.0  # m/sÂ²

# Rate Limiting Configuration
RATE_LIMIT_VISUAL_MAX_REQUESTS=100
RATE_LIMIT_VISUAL_WINDOW_SECONDS=60.0

RATE_LIMIT_AUDITORY_MAX_REQUESTS=1000
RATE_LIMIT_AUDITORY_WINDOW_SECONDS=60.0

RATE_LIMIT_SOMATO_MAX_REQUESTS=500
RATE_LIMIT_SOMATO_WINDOW_SECONDS=60.0

RATE_LIMIT_CHEMICAL_MAX_REQUESTS=50
RATE_LIMIT_CHEMICAL_WINDOW_SECONDS=60.0

RATE_LIMIT_VESTIBULAR_MAX_REQUESTS=200
RATE_LIMIT_VESTIBULAR_WINDOW_SECONDS=60.0

# Signal Filtering Configuration
# Visual filtering
VISUAL_FILTER_TYPE=median
VISUAL_MEDIAN_WINDOW=3
VISUAL_LOWPASS_CUTOFF=10.0
VISUAL_SAMPLE_RATE=30.0

# Auditory filtering
AUDITORY_FILTER_TYPE=band_pass
AUDITORY_LOWPASS_CUTOFF=20000.0
AUDITORY_HIGHPASS_CUTOFF=20.0
AUDITORY_SAMPLE_RATE=44100.0

# Somatosensory filtering
SOMATO_FILTER_TYPE=kalman
SOMATO_PROCESS_VARIANCE=0.00001
SOMATO_MEASUREMENT_VARIANCE=0.1
SOMATO_MEDIAN_WINDOW=5

# Chemical filtering
CHEMICAL_FILTER_TYPE=low_pass
CHEMICAL_LOWPASS_CUTOFF=1.0
CHEMICAL_SAMPLE_RATE=10.0
CHEMICAL_MEDIAN_WINDOW=3

# Vestibular filtering
VESTIBULAR_FILTER_TYPE=kalman
VESTIBULAR_PROCESS_VARIANCE=0.0001
VESTIBULAR_MEASUREMENT_VARIANCE=0.05
VESTIBULAR_HIGHPASS_CUTOFF=0.1
VESTIBULAR_SAMPLE_RATE=100.0

# Attention Control Configuration
ATTENTION_OVERLOAD_THRESHOLD=0.8
ATTENTION_THREAT_AMPLIFICATION_FACTOR=2.0
ATTENTION_SUPPRESSION_FLOOR=0.1
ATTENTION_BINDING_THRESHOLD=0.7
ATTENTION_BINDING_TIME_WINDOW=5.0

# Prometheus Metrics
METRICS_ENABLED=true
METRICS_PORT=9012

# API Security
API_KEY_ENABLED=false
API_KEY=your-secret-api-key-here

# Logging
LOG_FORMAT=json
LOG_FILE=/var/log/digital_thalamus/service.log
LOG_ROTATION=1d
LOG_RETENTION=30d

# Development Mode
DEBUG_MODE=false
ENABLE_CORS=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Integration with Sensory Services
VISUAL_CORTEX_URL=http://visual_cortex_service:8006
AUDITORY_CORTEX_URL=http://auditory_cortex_service:8007
SOMATOSENSORY_CORTEX_URL=http://somatosensory_cortex_service:8008
CHEMICAL_SENSING_URL=http://chemical_sensing_service:8009
VESTIBULAR_SYSTEM_URL=http://vestibular_service:8010

# Integration with Prefrontal Cortex
PREFRONTAL_CORTEX_URL=http://prefrontal_cortex_service:8011
