# HCL Executor Service - Environment Variables

# Service
SERVICE_NAME=hcl_executor

# Knowledge Base
KB_API_URL=http://hcl-kb-service:8000

# Kafka
KAFKA_BROKERS=kafka:9092

# Kubernetes
K8S_NAMESPACE=default
IN_CLUSTER=true  # false for local development

# Executor behavior
DRY_RUN=false  # true to validate without executing
ENABLE_ROLLBACK=true

# Logging
LOG_LEVEL=INFO
