# HCL Monitor Service - Environment Variables

# Service
SERVICE_NAME=hcl_monitor
COLLECTION_INTERVAL=15

# Knowledge Base
KB_API_URL=http://hcl-kb-service:8000

# Kafka (optional)
ENABLE_KAFKA=false
KAFKA_BROKERS=kafka:9092

# Services to monitor (semicolon-separated)
# Format: service_name,endpoint_url;service_name2,endpoint_url2
SERVICES_TO_MONITOR=maximus_core,http://maximus-core:8000/health;threat_intel,http://threat-intel:8000/health

# Logging
LOG_LEVEL=INFO
