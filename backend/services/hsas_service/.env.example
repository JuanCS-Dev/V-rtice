# ═══════════════════════════════════════════════════════════════════════════
# HSAS (Hybrid Skill Acquisition System) - Environment Configuration
# ═══════════════════════════════════════════════════════════════════════════

# Server Configuration
HOST=0.0.0.0
PORT=8003
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# Neural Network Configuration
STATE_DIM=5
ACTION_DIM=15
HIDDEN_DIM=128
LEARNING_RATE=0.001

# Reinforcement Learning Parameters
GAMMA=0.99
EPSILON_START=0.3
EPSILON_END=0.01
EPSILON_DECAY=0.995
TAU=0.005

# Model-Based RL Configuration
PLANNING_HORIZON=5
NUM_SIMULATED_TRAJECTORIES=10
WORLD_MODEL_UPDATE_FREQUENCY=100
WORLD_MODEL_LEARNING_RATE=0.0005

# Hybrid Arbitration
MODEL_FREE_THRESHOLD=0.6
MODEL_BASED_THRESHOLD=0.4
ARBITRATION_STRATEGY=uncertainty
ENABLE_DYNAMIC_ARBITRATION=true

# Imitation Learning
DEMONSTRATION_BUFFER_SIZE=1000
BEHAVIORAL_CLONING_EPOCHS=50
BEHAVIORAL_CLONING_BATCH_SIZE=32
DEMONSTRATION_PRIORITY_WEIGHT=2.0

# Skill Primitives Library
NUM_PRIMITIVES=15
PRIMITIVE_EXECUTION_TIMEOUT=10
PRIMITIVE_SUCCESS_THRESHOLD=0.8

# Skill Composition
MAX_SKILL_CHAIN_LENGTH=5
ENABLE_SKILL_COMPOSITION=true
COMPOSITION_LEARNING_RATE=0.0005

# Experience Replay
REPLAY_BUFFER_CAPACITY=50000
REPLAY_BATCH_SIZE=64
REPLAY_MIN_SIZE=1000
PRIORITIZED_REPLAY=true

# Basal Ganglia (Model-Free) Parameters
BG_DOPAMINE_MODULATION=true
BG_HABIT_FORMATION_THRESHOLD=100
BG_STRIATUM_LEARNING_RATE=0.001

# Cerebellum (Model-Based) Parameters
CB_FORWARD_MODEL_ENABLED=true
CB_ERROR_CORRECTION_GAIN=0.5
CB_INTERNAL_MODEL_UPDATE_RATE=0.001

# Metrics Configuration
METRICS_ENABLED=true
PROMETHEUS_PORT=8003
TRACK_SKILL_USAGE=true
TRACK_LEARNING_CURVES=true

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Logging Configuration
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=/var/log/maximus/hsas.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Performance Tuning
ASYNC_SKILL_EXECUTION=true
MAX_CONCURRENT_SKILLS=8
SKILL_EXECUTION_TIMEOUT=60
ENABLE_GPU=false
