# ═══════════════════════════════════════════════════════════════════════════
# IMMUNIS SYSTEM SERVICE - Environment Configuration
# ═══════════════════════════════════════════════════════════════════════════

# Server Configuration
HOST=0.0.0.0
PORT=8005
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# Innate Immunity Configuration
NEUTROPHIL_ACTIVATION_THRESHOLD=0.5
NEUTROPHIL_PHAGOCYTOSIS_RATE=0.8
NEUTROPHIL_LIFESPAN=300
NEUTROPHIL_COUNT=1000

MACROPHAGE_ACTIVATION_THRESHOLD=0.6
MACROPHAGE_PHAGOCYTOSIS_RATE=0.7
MACROPHAGE_ANTIGEN_PRESENTATION_RATE=0.9
MACROPHAGE_COUNT=500

NK_CELL_ACTIVATION_THRESHOLD=0.7
NK_CELL_CYTOTOXICITY=0.85
NK_CELL_COUNT=200

# Adaptive Immunity Configuration
DENDRITIC_CELL_ACTIVATION_THRESHOLD=0.5
DENDRITIC_CELL_MATURATION_TIME=120
DENDRITIC_CELL_MIGRATION_RATE=0.8
DENDRITIC_CELL_COUNT=100

HELPER_T_ACTIVATION_THRESHOLD=0.6
HELPER_T_PROLIFERATION_RATE=0.9
HELPER_T_CYTOKINE_PRODUCTION=0.85
HELPER_T_COUNT=300

CYTOTOXIC_T_ACTIVATION_THRESHOLD=0.65
CYTOTOXIC_T_KILLING_EFFICIENCY=0.9
CYTOTOXIC_T_MEMORY_FORMATION_RATE=0.7
CYTOTOXIC_T_COUNT=400

B_CELL_ACTIVATION_THRESHOLD=0.6
B_CELL_ANTIBODY_PRODUCTION_RATE=0.95
B_CELL_MEMORY_FORMATION_RATE=0.8
B_CELL_COUNT=500

# Cytokine System
ENABLE_CYTOKINE_SIGNALING=true
IL1_BASELINE=0.1
IL6_BASELINE=0.1
IL12_BASELINE=0.1
TNF_ALPHA_BASELINE=0.1
IFN_GAMMA_BASELINE=0.1
IL10_BASELINE=0.2

CYTOKINE_DECAY_RATE=0.95
CYTOKINE_AMPLIFICATION_FACTOR=1.5
CYTOKINE_INHIBITION_THRESHOLD=2.0

# Inflammation Control
INFLAMMATION_BASELINE=0.0
INFLAMMATION_THRESHOLD_LOW=0.3
INFLAMMATION_THRESHOLD_MEDIUM=0.6
INFLAMMATION_THRESHOLD_HIGH=0.8
INFLAMMATION_RESOLUTION_RATE=0.9

ENABLE_ANTI_INFLAMMATORY_RESPONSE=true
CHRONIC_INFLAMMATION_THRESHOLD=0.7
CHRONIC_INFLAMMATION_DURATION=3600

# Antibody System
ANTIBODY_LIBRARY_SIZE=10000
ANTIBODY_AFFINITY_MATURATION_ENABLED=true
ANTIBODY_HALF_LIFE=86400
ANTIBODY_NEUTRALIZATION_RATE=0.95

# Memory Cells
MEMORY_CELL_FORMATION_THRESHOLD=0.8
MEMORY_CELL_LIFESPAN=31536000
MEMORY_CELL_REACTIVATION_SPEED=0.9
MAX_MEMORY_CELLS=5000

# Immune Response Dynamics
INNATE_RESPONSE_TIME=5
ADAPTIVE_RESPONSE_TIME=60
MEMORY_RESPONSE_TIME=2

PATHOGEN_CLEARANCE_THRESHOLD=0.95
IMMUNE_SYSTEM_RECOVERY_TIME=600

# Clonal Selection
CLONAL_SELECTION_ENABLED=true
CLONAL_EXPANSION_RATE=2.0
NEGATIVE_SELECTION_THRESHOLD=0.3
POSITIVE_SELECTION_THRESHOLD=0.7

# Immunological Memory
ENABLE_IMMUNOLOGICAL_MEMORY=true
MEMORY_CONSOLIDATION_TIME=300
MEMORY_RECALL_ACCURACY=0.95
CROSS_REACTIVITY_THRESHOLD=0.8

# Tolerance Mechanisms
ENABLE_CENTRAL_TOLERANCE=true
ENABLE_PERIPHERAL_TOLERANCE=true
SELF_ANTIGEN_DATABASE_SIZE=1000
TOLERANCE_THRESHOLD=0.9

# Metrics Configuration
METRICS_ENABLED=true
PROMETHEUS_PORT=8005
TRACK_CELL_POPULATIONS=true
TRACK_CYTOKINE_LEVELS=true
TRACK_THREAT_ELIMINATION=true

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Logging Configuration
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=/var/log/maximus/immunis.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Database Configuration
ENABLE_THREAT_DATABASE=true
THREAT_DB_PATH=/data/immunis_threats.db
ANTIBODY_DB_PATH=/data/immunis_antibodies.db
MEMORY_CELL_DB_PATH=/data/immunis_memory.db

# Performance Tuning
ASYNC_IMMUNE_RESPONSE=true
MAX_CONCURRENT_RESPONSES=10
RESPONSE_TIMEOUT=30
ENABLE_PARALLEL_CELL_ACTIVATION=true
