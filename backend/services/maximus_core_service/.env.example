# MAXIMUS AI 3.0 - Environment Configuration
# Copy this file to .env and fill in your values
#
# REGRA DE OURO: Never commit .env with secrets
# Author: Claude Code + JuanCS-Dev
# Date: 2025-10-06

# ============================
# LLM PROVIDERS
# ============================
# Choose one: gemini, anthropic, openai
LLM_PROVIDER=gemini

# API Keys (Get from respective providers)
GEMINI_API_KEY=your_gemini_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# ============================
# DATABASE
# ============================
POSTGRES_USER=maximus
POSTGRES_PASSWORD=maximus_secure_2025
POSTGRES_DB=maximus_kb

# ============================
# SERVICE CONFIGURATION
# ============================
LOG_LEVEL=INFO
ENVIRONMENT=development

# ============================
# FEATURE FLAGS (MAXIMUS AI 3.0)
# ============================
# Enable/disable MAXIMUS components
ENABLE_PREDICTIVE_CODING=true
ENABLE_SKILL_LEARNING=true
ENABLE_NEUROMODULATION=true
ENABLE_ETHICAL_AI=true

# ============================
# HSAS SERVICE (FASE 6)
# ============================
# Skill Learning Service
HSAS_SERVICE_URL=http://hsas_service:8023

# ============================
# REDIS
# ============================
REDIS_URL=redis://redis:6379

# ============================
# LEGACY SERVICE URLs
# ============================
# (Configured in main docker-compose.yml)
THREAT_INTEL_SERVICE_URL=http://threat_intel_service:80
MALWARE_ANALYSIS_SERVICE_URL=http://malware_analysis_service:80
SSL_MONITOR_SERVICE_URL=http://ssl_monitor_service:80
IP_INTEL_SERVICE_URL=http://ip_intelligence_service:80
NMAP_SERVICE_URL=http://nmap_service:80
VULN_SCANNER_SERVICE_URL=http://vuln_scanner_service:80
DOMAIN_SERVICE_URL=http://domain_service:80
AURORA_PREDICT_URL=http://aurora_predict:80
OSINT_SERVICE_URL=http://osint-service:8007

# ============================
# MONITORING (Optional - TASK 2.1, 2.2)
# ============================
# Uncomment when implementing monitoring
# PROMETHEUS_PORT=9090
# GRAFANA_PORT=3000
# PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_multiproc