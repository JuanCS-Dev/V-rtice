# MAXIMUS Or√°culo Service - Environment Configuration
# Copy this file to .env and configure your settings

# ============================================================================
# SERVICE IDENTITY
# ============================================================================
SERVICE_NAME=maximus_oraculo
SERVICE_VERSION=1.0.0
ENVIRONMENT=development  # development, staging, or production

# ============================================================================
# API CONFIGURATION
# ============================================================================
HOST=0.0.0.0
PORT=8026
DEBUG=false  # NEVER true in production!
WORKERS=1

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================
# Google Gemini API Key (for LLM-powered suggestions)
# Get your key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# MAXIMUS Service URLs
MAXIMUS_CORE_URL=http://localhost:8001
MAXIMUS_ORCHESTRATOR_URL=http://localhost:8002

# ============================================================================
# DATABASE (future implementation)
# ============================================================================
DATABASE_URL=sqlite:///./oraculo.db
DATABASE_POOL_SIZE=5

# ============================================================================
# SECURITY
# ============================================================================
API_KEY_HEADER=X-API-Key
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:3001"]
ENABLE_CORS=true

# ============================================================================
# PERFORMANCE
# ============================================================================
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=300

# ============================================================================
# CODE SCANNER SETTINGS
# ============================================================================
MAX_CODE_SIZE_BYTES=10485760  # 10 MB
SCAN_TIMEOUT_SECONDS=60

# ============================================================================
# AUTO-IMPLEMENTER SETTINGS (CRITICAL!)
# ============================================================================
# WARNING: Auto-implementation is DANGEROUS if not properly controlled
ENABLE_AUTO_IMPLEMENTATION=false  # Set to true only if you understand the risks
REQUIRE_APPROVAL=true  # ALWAYS true in production!
MAX_IMPLEMENTATION_ATTEMPTS=3

# ============================================================================
# NOTES
# ============================================================================
# - Never commit .env file to git (it's in .gitignore)
# - Always use strong, unique values in production
# - Rotate API keys regularly
# - Review security settings before deploying to production
# - Test configuration with: python -c "from config import settings; print(settings)"
