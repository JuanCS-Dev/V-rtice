# ═══════════════════════════════════════════════════════════════════════════
# MEMORY CONSOLIDATION SERVICE - Environment Configuration
# ═══════════════════════════════════════════════════════════════════════════

# Server Configuration
HOST=0.0.0.0
PORT=8002
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# Replay Buffer Configuration
BUFFER_CAPACITY=10000
BUFFER_MIN_SIZE_FOR_CONSOLIDATION=32
BUFFER_PRIORITIZATION_ALPHA=0.6
BUFFER_PRIORITIZATION_BETA=0.4

# Sleep Mode Configuration
SLEEP_BATCH_SIZE=128
SLEEP_CYCLE_INTERVAL=300
SLEEP_NUM_CYCLES=5
SLEEP_LEARNING_RATE=0.001

# Wake Mode Configuration
WAKE_BATCH_SIZE=32
WAKE_CONSOLIDATION_INTERVAL=60
WAKE_LEARNING_RATE=0.0005

# Replay Strategies
DEFAULT_REPLAY_STRATEGY=prioritized
ENABLE_TEMPORAL_DIFFERENCE=true
ENABLE_RECENCY_BIAS=true

# Priority Calculation
PRIORITY_TD_ERROR_WEIGHT=0.7
PRIORITY_RECENCY_WEIGHT=0.2
PRIORITY_NOVELTY_WEIGHT=0.1

# Hippocampal Replay Parameters
REPLAY_FORWARD_PROBABILITY=0.5
REPLAY_REVERSE_PROBABILITY=0.3
REPLAY_RANDOM_PROBABILITY=0.2
REPLAY_COMPRESSION_FACTOR=10.0

# Consolidation Parameters
CONSOLIDATION_GAMMA=0.99
CONSOLIDATION_TD_LAMBDA=0.95
CONSOLIDATION_MIN_PRIORITY=0.0001

# Metrics Configuration
METRICS_ENABLED=true
PROMETHEUS_PORT=8002

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Logging Configuration
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=/var/log/maximus/memory_consolidation.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Performance Tuning
ASYNC_CONSOLIDATION=true
MAX_CONCURRENT_CONSOLIDATIONS=4
CONSOLIDATION_TIMEOUT=30
