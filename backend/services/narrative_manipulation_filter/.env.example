# ============================================================================
# NARRATIVE MANIPULATION FILTER - Environment Configuration
# Multi-layer detection and protection against narrative manipulation
# ============================================================================

# Service Configuration
SERVICE_NAME=narrative_manipulation_filter
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8013
LOG_LEVEL=INFO

# Analysis Thresholds
INFO_THRESHOLD=0.3  # Below this = no alert
WARNING_THRESHOLD=0.6  # Moderate manipulation
CRITICAL_THRESHOLD=0.8  # Severe manipulation

# Emotional Manipulation Detection
EMOTIONAL_INTENSITY_THRESHOLD=0.5
FEAR_SCORE_THRESHOLD=0.6
URGENCY_SCORE_THRESHOLD=0.6
TRIBAL_SCORE_THRESHOLD=0.6

# Logical Fallacy Detection
FALLACY_SEVERITY_THRESHOLD=0.5
ARGUMENT_QUALITY_THRESHOLD=0.6
REASONING_SOUNDNESS_THRESHOLD=0.6

# Source Credibility
DEFAULT_CREDIBILITY_SCORE=0.5
HIGH_CREDIBILITY_THRESHOLD=0.7
LOW_CREDIBILITY_THRESHOLD=0.3

# Reality Distortion Detection
DISTORTION_SEVERITY_THRESHOLD=0.5
FACTUAL_ACCURACY_THRESHOLD=0.7
CONTEXT_INTEGRITY_THRESHOLD=0.7

# Alert Configuration
ENABLE_BLOCKING=true
ENABLE_ALTERNATIVES=true
ENABLE_EDUCATIONAL_CONTENT=true
MAX_EVIDENCE_ITEMS=10
MAX_ALTERNATIVE_SOURCES=3

# Prometheus Metrics
METRICS_ENABLED=true
METRICS_PORT=9013

# API Security
API_KEY_ENABLED=false
API_KEY=your-secret-api-key-here

# Logging
LOG_FORMAT=json
LOG_FILE=/var/log/narrative_filter/service.log
LOG_ROTATION=1d
LOG_RETENTION=30d

# Development Mode
DEBUG_MODE=false
ENABLE_CORS=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Integration URLs
PREFRONTAL_CORTEX_URL=http://prefrontal_cortex_service:8011
DIGITAL_THALAMUS_URL=http://digital_thalamus_service:8012

# External Fact-Checking APIs (optional)
FACTCHECK_API_ENABLED=false
FACTCHECK_API_URL=https://factcheckapi.example.com
FACTCHECK_API_KEY=your-factcheck-api-key

# Database (for tracking manipulation patterns - optional)
DATABASE_ENABLED=false
DATABASE_URL=postgresql://user:password@localhost:5432/narrative_filter

# Redis (for caching analysis results - optional)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379/0
REDIS_TTL=3600  # 1 hour
