# Offensive Orchestrator Service - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# LLM Configuration (Gemini)
# ============================================================================
GEMINI_API_KEY=your_gemini_api_key_here
LLM_MODEL=gemini-1.5-pro
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096
LLM_TIMEOUT_SECONDS=60

# ============================================================================
# PostgreSQL Database (Campaign Storage)
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=orchestrator_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=offensive_campaigns

# ============================================================================
# Qdrant Vector Database (Attack Memory)
# ============================================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=attack_memory
QDRANT_EMBEDDING_DIM=768

# ============================================================================
# Redis (HOTL System)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================================================
# Service Configuration
# ============================================================================
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8000
LOG_LEVEL=INFO

# ============================================================================
# Development/Testing
# ============================================================================
# Set to 'true' for development mode
DEV_MODE=false

# Test database credentials (used by CI/CD)
TEST_POSTGRES_HOST=localhost
TEST_POSTGRES_PORT=5432
TEST_POSTGRES_USER=test_user
TEST_POSTGRES_PASSWORD=test_password
TEST_POSTGRES_DB=test_db

# ============================================================================
# Security & Compliance
# ============================================================================
# Maximum campaign duration in minutes
MAX_CAMPAIGN_DURATION_MINUTES=480

# HOTL timeout in seconds (default: 300 = 5 minutes)
HOTL_TIMEOUT_SECONDS=300

# Enable audit logging
ENABLE_AUDIT_LOG=true
AUDIT_LOG_PATH=/var/log/offensive_orchestrator/audit.log
