# ============================================================================
# PREFRONTAL CORTEX SERVICE - Environment Configuration
# Rational Control and Emotional Regulation for Maximus AI 3.0
# ============================================================================

# Service Configuration
SERVICE_NAME=prefrontal_cortex_service
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8011
LOG_LEVEL=INFO

# Sensory Service Endpoints (for emotional state monitoring)
VISUAL_CORTEX_URL=http://visual_cortex_service:8006
AUDITORY_CORTEX_URL=http://auditory_cortex_service:8007
SOMATOSENSORY_CORTEX_URL=http://somatosensory_cortex_service:8008
CHEMICAL_SENSING_URL=http://chemical_sensing_service:8009
VESTIBULAR_SYSTEM_URL=http://vestibular_service:8010

# Emotional Monitoring Configuration
EMOTIONAL_MONITORING_INTERVAL=5.0  # seconds between polls
AROUSAL_THRESHOLD_ALERT=0.4
AROUSAL_THRESHOLD_STRESSED=0.6
AROUSAL_THRESHOLD_PANIC=0.8
AROUSAL_THRESHOLD_OVERWHELMED=0.9

# Rational Validation Configuration
EVIDENCE_QUALITY_THRESHOLD=0.6  # Minimum quality for HIGH severity actions
MIN_CONFIDENCE_CRITICAL=0.9  # Minimum confidence for CRITICAL actions
MAX_FALSE_POSITIVE_RATE=0.15  # Maximum acceptable FP rate

# Cost-Benefit Analysis
COST_BENEFIT_APPROVE_THRESHOLD=0.3  # benefit - cost > this → APPROVE
COST_BENEFIT_REJECT_THRESHOLD=-0.2  # benefit - cost < this → REJECT

# Impulse Inhibition Configuration
PAIN_CRITICAL_THRESHOLD=9.0  # Pain intensity threshold for delay
PAIN_CRITICAL_DELAY=5.0  # Delay in seconds for critical pain
C2_BEACON_DELAY=10.0  # Delay for C2 beacon verification
BITTER_PAYLOAD_DELAY=3.0  # Delay for bitter payload FP check

# Historical Learning
MAX_HISTORICAL_OUTCOMES=10000  # Maximum outcomes to store
LEARNING_RATE=0.1  # Weight for new outcomes in rolling averages

# API Security
API_KEY_ENABLED=false
API_KEY=your-secret-api-key-here

# Prometheus Metrics
METRICS_ENABLED=true
METRICS_PORT=9011

# Database (for persistent learning - optional)
DATABASE_ENABLED=false
DATABASE_URL=postgresql://user:password@localhost:5432/prefrontal_cortex

# Redis (for distributed state - optional)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379/0

# Human-in-the-Loop Configuration
HITL_ENABLED=false
HITL_WEBHOOK_URL=http://localhost:8000/hitl/approval
HITL_TIMEOUT=300  # seconds to wait for human response

# Consensus Validation Configuration
CONSENSUS_ENABLED=false
CONSENSUS_VALIDATORS=["validator1:8100", "validator2:8101"]
CONSENSUS_THRESHOLD=0.66  # 2/3 majority required

# Circuit Breaker Configuration
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=10  # failures before opening
CIRCUIT_BREAKER_TIMEOUT=60  # seconds before retry

# Logging
LOG_FORMAT=json
LOG_FILE=/var/log/prefrontal_cortex/service.log
LOG_ROTATION=1d
LOG_RETENTION=30d

# Development Mode
DEBUG_MODE=false
ENABLE_CORS=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
