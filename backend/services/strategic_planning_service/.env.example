# ═══════════════════════════════════════════════════════════════════════════
# STRATEGIC PLANNING SERVICE - Environment Configuration
# ═══════════════════════════════════════════════════════════════════════════

# Server Configuration
HOST=0.0.0.0
PORT=8004
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# Prefrontal Cortex Configuration
EXECUTIVE_FUNCTION_MODE=autonomous
WORKING_MEMORY_CAPACITY=7
PLANNING_HORIZON_DAYS=90
STRATEGIC_REVIEW_INTERVAL=86400

# Policy Management
MAX_ACTIVE_POLICIES=100
POLICY_PRIORITY_LEVELS=5
POLICY_CONFLICT_RESOLUTION=priority_based
POLICY_AUTO_DISABLE_THRESHOLD=0.1
POLICY_EFFECTIVENESS_WINDOW=604800

# Resource Allocation
TOTAL_COMPUTE_RESOURCES=100
TOTAL_NETWORK_BANDWIDTH=1000
TOTAL_STORAGE_CAPACITY=10000
RESOURCE_REALLOCATION_INTERVAL=3600
MIN_RESOURCE_RESERVE=0.1

# Risk Assessment
RISK_ASSESSMENT_FREQUENCY=300
RISK_MATRIX_SIZE=5
CRITICAL_RISK_THRESHOLD=0.8
HIGH_RISK_THRESHOLD=0.6
MEDIUM_RISK_THRESHOLD=0.4
LOW_RISK_THRESHOLD=0.2

# Approval Workflow
ENABLE_APPROVAL_WORKFLOW=true
AUTO_APPROVE_LOW_RISK=true
AUTO_APPROVE_THRESHOLD=0.3
REQUIRE_MANUAL_APPROVAL_CRITICAL=true
APPROVAL_TIMEOUT_SECONDS=3600
MAX_PENDING_APPROVALS=50

# Strategic Planning
ENABLE_LONG_TERM_PLANNING=true
PLANNING_ALGORITHM=hierarchical
SCENARIO_SIMULATION_ENABLED=true
NUM_SCENARIOS_PER_PLAN=5
PLAN_OPTIMIZATION_ITERATIONS=100

# Goal Management
MAX_CONCURRENT_GOALS=10
GOAL_ACHIEVEMENT_THRESHOLD=0.95
SUBGOAL_DECOMPOSITION_DEPTH=3
ENABLE_GOAL_PRIORITIZATION=true

# Decision Making
DECISION_STRATEGY=multi_objective
ENABLE_BOUNDED_RATIONALITY=true
COGNITIVE_LOAD_THRESHOLD=0.8
DECISION_TIME_LIMIT=10

# Dorsolateral Prefrontal Cortex Parameters
DLPFC_INHIBITION_STRENGTH=0.7
DLPFC_WORKING_MEMORY_DECAY=0.95
DLPFC_ATTENTION_CONTROL=true

# Metrics Configuration
METRICS_ENABLED=true
PROMETHEUS_PORT=8004
TRACK_DECISION_LATENCY=true
TRACK_POLICY_EFFECTIVENESS=true

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Logging Configuration
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=/var/log/maximus/strategic_planning.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Database Configuration (for persistence)
ENABLE_PERSISTENCE=true
DB_TYPE=sqlite
DB_PATH=/data/strategic_planning.db
DB_BACKUP_INTERVAL=3600

# Performance Tuning
ASYNC_PLANNING=true
MAX_CONCURRENT_PLANS=5
PLANNING_TIMEOUT=120
CACHE_ENABLED=true
CACHE_TTL=300
