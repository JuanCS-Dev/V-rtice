# ═══════════════════════════════════════════════════════════════════════════
# VISUAL CORTEX SERVICE - Environment Configuration
# Biomimetic Visual Processing for Cybersecurity
# ═══════════════════════════════════════════════════════════════════════════

# Server Configuration
HOST=0.0.0.0
PORT=8006
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# Malware Vision Configuration
MALWARE_IMAGE_SIZE=256
MALWARE_CLASSIFICATION_THRESHOLD=0.7
ENABLE_CNN_CLASSIFIER=false
CNN_MODEL_PATH=/models/malware_cnn.pth

# Network Vision Configuration
NETWORK_GRID_SIZE=256
NETWORK_TIME_WINDOW_SECONDS=60
MAX_HEATMAP_HISTORY=100
ENABLE_OPTICAL_FLOW=true

# Pattern Detection Thresholds
DDOS_THRESHOLD_STD_DEVS=3.0
SCAN_THRESHOLD_PERCENT=0.1
LATERAL_MOVEMENT_MIN_FRAMES=3
EXFILTRATION_BASELINE_MULTIPLIER=0.5

# Attention System Configuration
PERIPHERAL_SAMPLING_RATE=1.0
SALIENCE_THRESHOLD=MEDIUM
FOVEAL_ANALYSIS_TIMEOUT=30
MAX_SACCADE_HISTORY=1000

# Anomaly Detection Thresholds
ENTROPY_CHANGE_THRESHOLD=2.0
VOLUME_CHANGE_THRESHOLD=3.0
RATE_CHANGE_THRESHOLD=2.5

# Event-Driven Vision Configuration
DVS_CHANGE_THRESHOLD=0.05
DVS_TEMPORAL_RESOLUTION_MS=1.0
DVS_EVENT_RETENTION_SECONDS=3600

# Weber-Fechner Law Parameters
WEBER_FRACTION=0.05

# Performance Configuration
ENABLE_VISUALIZATION_CACHE=true
MAX_CACHED_VISUALIZATIONS=1000
ENABLE_PARALLEL_PROCESSING=true
MAX_CONCURRENT_ANALYSES=10

# Metrics Configuration
METRICS_ENABLED=true
PROMETHEUS_PORT=8006

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Logging Configuration
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=/var/log/maximus/visual_cortex.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Optional: ML Model Configuration
ENABLE_DEEP_LEARNING=false
USE_GPU=false
GPU_DEVICE_ID=0
BATCH_SIZE=32

# Optional: Advanced Features
ENABLE_ADVERSARIAL_DETECTION=false
ENABLE_EXPLAINABILITY=false
SAVE_VISUALIZATIONS_TO_DISK=false
VISUALIZATION_OUTPUT_PATH=/data/visualizations
