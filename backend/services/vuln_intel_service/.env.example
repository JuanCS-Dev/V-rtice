# ============================================================================
# VULNERABILITY INTELLIGENCE SERVICE - Environment Configuration
# Template-Driven Scanning with CVE Correlation
# ============================================================================

# Service Configuration
SERVICE_NAME=vulnerability_intelligence
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8033
LOG_LEVEL=INFO

# Nuclei Configuration
NUCLEI_BINARY=/usr/bin/nuclei
NUCLEI_TEMPLATES_DIR=/app/nuclei-templates
GITHUB_TOKEN=                        # GitHub PAT for template sync (optional)
AUTO_SYNC_TEMPLATES=true             # Auto-sync templates on startup
TEMPLATE_SYNC_INTERVAL=3600          # Sync interval in seconds (1 hour)

# Scanning Configuration
DEFAULT_NUCLEI_CONCURRENCY=25        # Parallel requests
DEFAULT_NUCLEI_RATE_LIMIT=150        # Requests per second
DEFAULT_NUCLEI_TIMEOUT=5             # Request timeout in seconds

# CVE Correlation APIs
NVD_API_BASE=https://services.nvd.nist.gov/rest/json/cves/2.0
EPSS_API_BASE=https://api.first.org/data/v1/epss
CVE_CACHE_TTL=3600                   # CVE cache TTL in seconds

# ASA Integration
ENABLE_ASA_INTEGRATION=true

# ASA Service URLs
VISUAL_CORTEX_URL=http://visual_cortex_service:8006
AUDITORY_CORTEX_URL=http://auditory_cortex_service:8007
SOMATOSENSORY_URL=http://somatosensory_service:8008
CHEMICAL_SENSING_URL=http://chemical_sensing_service:8009
VESTIBULAR_URL=http://vestibular_service:8010
PREFRONTAL_CORTEX_URL=http://prefrontal_cortex_service:8011
DIGITAL_THALAMUS_URL=http://digital_thalamus_service:8012
NARRATIVE_FILTER_URL=http://narrative_manipulation_filter:8013
AI_IMMUNE_SYSTEM_URL=http://ai_immune_system:8014
HOMEOSTATIC_REGULATION_URL=http://homeostatic_regulation:8015

# Timeouts
ASA_REQUEST_TIMEOUT=10.0             # ASA API timeout (seconds)
NVD_API_TIMEOUT=30.0                 # NVD API timeout (seconds)
EPSS_API_TIMEOUT=10.0                # EPSS API timeout (seconds)

# Prometheus Metrics
METRICS_ENABLED=true
METRICS_PORT=9033

# Database (optional - for persistence)
DATABASE_URL=

# Redis (optional - for caching)
REDIS_URL=

# Security
REQUIRE_API_KEY=false
API_KEY=

# Development/Debug
DEBUG_MODE=false
VERBOSE_LOGGING=false
