!     def _parse_health(self, health_str: Optional[str]) -> HealthStatus:
!         """Parse Docker health status"""
!         if not health_str:
!             return HealthStatus.NONE
          
!         health_map = {
!             "healthy": HealthStatus.HEALTHY,
!             "unhealthy": HealthStatus.UNHEALTHY,
!             "starting": HealthStatus.STARTING,
