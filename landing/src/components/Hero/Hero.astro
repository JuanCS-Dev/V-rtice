          </svg>
          <GitHubStars client:load />
        </a>
      </div>

      <!-- ═══════════════════════════════════════════════════════════ -->
      <!-- TRUST SIGNALS -->
      <!-- ═══════════════════════════════════════════════════════════ -->
      <div class="hero-trust-signals animate-fade-in">
        <div class="trust-signal">
          <div class="trust-value">125</div>
          <div class="trust-label">Microservices</div>
        </div>
        <div class="trust-signal">
          <div class="trust-value">9</div>
          <div class="trust-label">Immune Cell Types</div>
        </div>
        <div class="trust-signal">
          <div class="trust-value">IIT</div>
          <div class="trust-label">Conscious (Validated)</div>
        </div>
        <div class="trust-signal">
          <div class="trust-value">100%</div>
          <div class="trust-label">Open Source</div>
        </div>
      </div>
    </div>

    <!-- ═══════════════════════════════════════════════════════════ -->
    <!-- HERO VISUAL (Right Side) -->
    <!-- ═══════════════════════════════════════════════════════════ -->
    <div class="hero-visual animate-float">
      <div class="hero-image-wrapper">
        <!-- Real MAXIMUS AI Dashboard Screenshot -->
        <img
          src="/maximus-dashboard.png"
          alt="MAXIMUS AI Dashboard - Neural Architecture and Operations Overview"
          class="hero-dashboard-image"
          loading="eager"
          width="1200"
          height="800"
        />

        <!-- Glow Effect -->
        <div class="hero-glow"></div>
      </div>
    </div>
  </div>

  <!-- ═══════════════════════════════════════════════════════════ -->
  <!-- BACKGROUND DECORATION -->
  <!-- ═══════════════════════════════════════════════════════════ -->
  <div class="hero-bg-decoration" aria-hidden="true"></div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding-top: var(--space-3xl);
    padding-bottom: var(--space-3xl);
    overflow: hidden;
  }

  .hero .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3xl);
    align-items: center;
    position: relative;
    z-index: 1;
  }

  /* ═══════════════════════════════════════════════════════════ */
  /* HERO CONTENT (Left Side) */
  /* ═══════════════════════════════════════════════════════════ */

  .hero-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .hero-badge {
    animation-delay: 0.1s;
  }

  .hero-title {
    font-size: var(--text-6xl);
    font-weight: var(--font-extrabold);
    line-height: var(--leading-tight);
    letter-spacing: var(--tracking-tight);
    margin: 0;
    animation-delay: 0.2s;
  }

  .hero-subtitle {
    font-size: var(--text-2xl);
    font-weight: var(--font-bold);
    line-height: var(--leading-tight);
    color: var(--color-text-primary);
    margin: 0;
    animation-delay: 0.25s;
  }

  .hero-subtitle strong {
    color: var(--color-accent-primary);
  }

  .hero-description {
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
    color: var(--color-text-secondary);
    max-width: 700px;
    margin: 0;
    animation-delay: 0.3s;
  }

  .hero-description strong {
    color: var(--color-accent-primary);
    font-weight: var(--font-semibold);
  }

  /* ═══════════════════════════════════════════════════════════ */
  /* CTA BUTTONS */
  /* ═══════════════════════════════════════════════════════════ */

  .hero-ctas {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-md);
    animation-delay: 0.4s;
  }

  .hero-ctas .btn {
    font-size: var(--text-lg);
    padding: var(--space-md) var(--space-xl);
  }

  /* ═══════════════════════════════════════════════════════════ */
  /* TRUST SIGNALS */
  /* ═══════════════════════════════════════════════════════════ */

  .hero-trust-signals {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-lg);
    margin-top: var(--space-lg);
    animation-delay: 0.5s;
  }

  .trust-signal {
    text-align: center;
    padding: var(--space-md);
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border-default);
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
  }

  .trust-signal:hover {
    border-color: var(--color-border-primary);
    transform: translateY(-2px);
  }

  .trust-value {
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    color: var(--color-accent-primary);
    line-height: 1;
  }

  .trust-label {
    font-size: var(--text-sm);
    color: var(--color-text-tertiary);
    margin-top: var(--space-xs);
  }

  /* ═══════════════════════════════════════════════════════════ */
  /* HERO VISUAL (Right Side) */
  /* ═══════════════════════════════════════════════════════════ */

  .hero-visual {
    position: relative;
    animation-duration: 4s;
  }

  .hero-image-wrapper {
    position: relative;
    border-radius: var(--radius-2xl);
    overflow: hidden;
    box-shadow: var(--shadow-2xl);
  }

  .hero-dashboard-image {
    width: 100%;
    height: auto;
    display: block;
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-2xl);
    transition: transform var(--transition-base);
  }

  .hero-dashboard-image:hover {
    transform: scale(1.02);
  }

  .hero-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 120%;
    height: 120%;
    background: var(--gradient-radial-primary);
    opacity: 0.5;
    filter: blur(60px);
    z-index: -1;
    animation: glow 3s ease-in-out infinite;
  }

  /* ═══════════════════════════════════════════════════════════ */
  /* BACKGROUND DECORATION */
  /* ═══════════════════════════════════════════════════════════ */

  .hero-bg-decoration {
    position: absolute;
    top: 0;
    right: 0;
    width: 50%;
    height: 100%;
    background: var(--gradient-radial-primary);
    opacity: 0.1;
    pointer-events: none;
  }

  /* ═══════════════════════════════════════════════════════════ */
  /* RESPONSIVE */
  /* ═══════════════════════════════════════════════════════════ */

  @media (max-width: 1024px) {
    .hero .container {
      grid-template-columns: 1fr;
      gap: var(--space-2xl);
      text-align: center;
    }

    .hero-content {
      align-items: center;
    }

    .hero-description {
      max-width: 100%;
    }

    .hero-ctas {
      justify-content: center;
    }

    .hero-trust-signals {
      grid-template-columns: repeat(2, 1fr);
    }

    .hero-visual {
      order: -1;
    }
  }

  @media (max-width: 768px) {
    .hero {
      min-height: auto;
      padding-top: var(--space-2xl);
      padding-bottom: var(--space-2xl);
    }

    .hero-title {
      font-size: var(--text-4xl);
    }

    .hero-description {
      font-size: var(--text-lg);
    }

    .hero-ctas {
      flex-direction: column;
      width: 100%;
    }

    .hero-ctas .btn {
      width: 100%;
      justify-content: center;
    }

    .hero-trust-signals {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-md);
    }

    .trust-value {
      font-size: var(--text-2xl);
    }

    .trust-label {
      font-size: var(--text-xs);
    }
  }

  /* ═══════════════════════════════════════════════════════════ */
  /* ANIMATIONS */
  /* ═══════════════════════════════════════════════════════════ */

  @media (prefers-reduced-motion: no-preference) {
    .animate-slide-up {
      animation: slideInUp 0.8s ease-out backwards;
    }

    .animate-fade-in {
      animation: fadeIn 0.8s ease-out backwards;
    }

    .animate-float {
      animation: float 6s ease-in-out infinite;
    }
  }
</style>
