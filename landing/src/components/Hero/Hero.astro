---
/**
 * ═══════════════════════════════════════════════════════════════════════════
 * HERO SECTION - Vértice-MAXIMUS Landing Page
 * ═══════════════════════════════════════════════════════════════════════════
 *
 * Primeira impressão da landing page. Hero section com:
 * - Tagline impactante
 * - Descrição clara do produto
 * - CTAs primários (Try Demo, GitHub, Documentation)
 * - Visual hero (screenshot ou vídeo)
 * - Trust signals (stats, badges)
 *
 * Design: Inspirado em OpenCTI, Wazuh, Auto-GPT
 * Performance: Lighthouse 100/100 target
 */

import GitHubStars from './GitHubStars.tsx';
---

<section class="hero">
  <div class="container">
    <div class="hero-content">
      <!-- ═══════════════════════════════════════════════════════════ -->
      <!-- ANNOUNCEMENT BADGE -->
      <!-- ═══════════════════════════════════════════════════════════ -->
      <div class="hero-badge animate-fade-in">
        <span class="badge badge-primary">
          🚀 Now Open Source
        </span>
      </div>

      <!-- ═══════════════════════════════════════════════════════════ -->
      <!-- HERO TITLE -->
      <!-- ═══════════════════════════════════════════════════════════ -->
      <h1 class="hero-title animate-slide-up">
        Autonomous Cybersecurity
        <br />
        <span class="text-gradient">Intelligence Platform</span>
      </h1>

      <!-- ═══════════════════════════════════════════════════════════ -->
      <!-- HERO DESCRIPTION -->
      <!-- ═══════════════════════════════════════════════════════════ -->
      <p class="hero-description animate-slide-up">
        AGI-powered security operations with <strong>adaptive immunity</strong>,
        real-time threat intelligence, and autonomous response.
        Built for modern SOCs and security teams.
      </p>

      <!-- ═══════════════════════════════════════════════════════════ -->
      <!-- CTA BUTTONS -->
      <!-- ═══════════════════════════════════════════════════════════ -->
      <div class="hero-ctas animate-slide-up">
        <a href="#getting-started" class="btn btn-primary">
          <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
          Get Started
        </a>

        <a href="https://github.com/JuanCS-Dev/V-rtice" class="btn btn-secondary" target="_blank" rel="noopener noreferrer">
          <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          <GitHubStars client:load />
        </a>

        <a href="https://docs.vertice-maximus.com" class="btn btn-secondary" target="_blank" rel="noopener noreferrer">
          <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
            <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2zM22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/>
          </svg>
          Documentation
        </a>
      </div>

      <!-- ═══════════════════════════════════════════════════════════ -->
      <!-- TRUST SIGNALS -->
      <!-- ═══════════════════════════════════════════════════════════ -->
      <div class="hero-trust-signals animate-fade-in">
        <div class="trust-signal">
          <div class="trust-value">82</div>
          <div class="trust-label">Microservices</div>
        </div>
        <div class="trust-signal">
          <div class="trust-value">1M+</div>
          <div class="trust-label">Threats Analyzed</div>
        </div>
        <div class="trust-signal">
          <div class="trust-value">24/7</div>
          <div class="trust-label">Autonomous</div>
        </div>
        <div class="trust-signal">
          <div class="trust-value">100%</div>
          <div class="trust-label">Open Source</div>
        </div>
      </div>
    </div>

    <!-- ═══════════════════════════════════════════════════════════ -->
    <!-- HERO VISUAL (Right Side) -->
    <!-- ═══════════════════════════════════════════════════════════ -->
    <div class="hero-visual animate-float">
      <div class="hero-image-wrapper">
        <!-- Placeholder - será substituído por screenshot real -->
        <div class="hero-placeholder">
          <svg width="100%" height="100%" viewBox="0 0 800 600" fill="none">
            <rect width="800" height="600" fill="url(#heroGradient)" rx="16"/>
            <defs>
              <linearGradient id="heroGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#ef4444;stop-opacity:0.2" />
                <stop offset="100%" style="stop-color:#f97316;stop-opacity:0.1" />
              </linearGradient>
            </defs>
            <!-- Grid Pattern -->
            <g opacity="0.1">
              {[...Array(20)].map((_, i) => (
                <line x1={i * 40} y1="0" x2={i * 40} y2="600" stroke="#fff" stroke-width="0.5"/>
              ))}
              {[...Array(15)].map((_, i) => (
                <line x1="0" y1={i * 40} x2="800" y2={i * 40} stroke="#fff" stroke-width="0.5"/>
              ))}
            </g>
            <!-- Placeholder Text -->
            <text x="50%" y="50%" text-anchor="middle" fill="#fff" opacity="0.3" font-size="24" font-weight="600">
              Cockpit Soberano Dashboard
            </text>
            <text x="50%" y="55%" text-anchor="middle" fill="#fff" opacity="0.2" font-size="16">
              Screenshot will be added here
            </text>
          </svg>
        </div>

        <!-- Glow Effect -->
        <div class="hero-glow"></div>
      </div>
    </div>
  </div>

  <!-- ═══════════════════════════════════════════════════════════ -->
  <!-- BACKGROUND DECORATION -->
  <!-- ═══════════════════════════════════════════════════════════ -->
  <div class="hero-bg-decoration" aria-hidden="true"></div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding-top: var(--space-3xl);
    padding-bottom: var(--space-3xl);
    overflow: hidden;
  }

  .hero .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3xl);
    align-items: center;
    position: relative;
    z-index: 1;
  }

  /* ═══════════════════════════════════════════════════════════ */
  /* HERO CONTENT (Left Side) */
  /* ═══════════════════════════════════════════════════════════ */

  .hero-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .hero-badge {
    animation-delay: 0.1s;
  }

  .hero-title {
    font-size: var(--text-6xl);
    font-weight: var(--font-extrabold);
    line-height: var(--leading-tight);
    letter-spacing: var(--tracking-tight);
    margin: 0;
    animation-delay: 0.2s;
  }

  .hero-description {
    font-size: var(--text-xl);
    line-height: var(--leading-relaxed);
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0;
    animation-delay: 0.3s;
  }

  .hero-description strong {
    color: var(--color-accent-primary);
    font-weight: var(--font-semibold);
  }

  /* ═══════════════════════════════════════════════════════════ */
  /* CTA BUTTONS */
  /* ═══════════════════════════════════════════════════════════ */

  .hero-ctas {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-md);
    animation-delay: 0.4s;
  }

  .hero-ctas .btn {
    font-size: var(--text-lg);
    padding: var(--space-md) var(--space-xl);
  }

  /* ═══════════════════════════════════════════════════════════ */
  /* TRUST SIGNALS */
  /* ═══════════════════════════════════════════════════════════ */

  .hero-trust-signals {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-lg);
    margin-top: var(--space-lg);
    animation-delay: 0.5s;
  }

  .trust-signal {
    text-align: center;
    padding: var(--space-md);
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border-default);
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
  }

  .trust-signal:hover {
    border-color: var(--color-border-primary);
    transform: translateY(-2px);
  }

  .trust-value {
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    color: var(--color-accent-primary);
    line-height: 1;
  }

  .trust-label {
    font-size: var(--text-sm);
    color: var(--color-text-tertiary);
    margin-top: var(--space-xs);
  }

  /* ═══════════════════════════════════════════════════════════ */
  /* HERO VISUAL (Right Side) */
  /* ═══════════════════════════════════════════════════════════ */

  .hero-visual {
    position: relative;
    animation-duration: 4s;
  }

  .hero-image-wrapper {
    position: relative;
    border-radius: var(--radius-2xl);
    overflow: hidden;
    box-shadow: var(--shadow-2xl);
  }

  .hero-placeholder {
    width: 100%;
    aspect-ratio: 4 / 3;
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border-primary);
    border-radius: var(--radius-2xl);
  }

  .hero-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 120%;
    height: 120%;
    background: var(--gradient-radial-primary);
    opacity: 0.5;
    filter: blur(60px);
    z-index: -1;
    animation: glow 3s ease-in-out infinite;
  }

  /* ═══════════════════════════════════════════════════════════ */
  /* BACKGROUND DECORATION */
  /* ═══════════════════════════════════════════════════════════ */

  .hero-bg-decoration {
    position: absolute;
    top: 0;
    right: 0;
    width: 50%;
    height: 100%;
    background: var(--gradient-radial-primary);
    opacity: 0.1;
    pointer-events: none;
  }

  /* ═══════════════════════════════════════════════════════════ */
  /* RESPONSIVE */
  /* ═══════════════════════════════════════════════════════════ */

  @media (max-width: 1024px) {
    .hero .container {
      grid-template-columns: 1fr;
      gap: var(--space-2xl);
      text-align: center;
    }

    .hero-content {
      align-items: center;
    }

    .hero-description {
      max-width: 100%;
    }

    .hero-ctas {
      justify-content: center;
    }

    .hero-trust-signals {
      grid-template-columns: repeat(2, 1fr);
    }

    .hero-visual {
      order: -1;
    }
  }

  @media (max-width: 768px) {
    .hero {
      min-height: auto;
      padding-top: var(--space-2xl);
      padding-bottom: var(--space-2xl);
    }

    .hero-title {
      font-size: var(--text-4xl);
    }

    .hero-description {
      font-size: var(--text-lg);
    }

    .hero-ctas {
      flex-direction: column;
      width: 100%;
    }

    .hero-ctas .btn {
      width: 100%;
      justify-content: center;
    }

    .hero-trust-signals {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-md);
    }

    .trust-value {
      font-size: var(--text-2xl);
    }

    .trust-label {
      font-size: var(--text-xs);
    }
  }

  /* ═══════════════════════════════════════════════════════════ */
  /* ANIMATIONS */
  /* ═══════════════════════════════════════════════════════════ */

  @media (prefers-reduced-motion: no-preference) {
    .animate-slide-up {
      animation: slideInUp 0.8s ease-out backwards;
    }

    .animate-fade-in {
      animation: fadeIn 0.8s ease-out backwards;
    }

    .animate-float {
      animation: float 6s ease-in-out infinite;
    }
  }
</style>
