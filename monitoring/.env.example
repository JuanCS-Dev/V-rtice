# ═══════════════════════════════════════════════════════════════════════════
# MONITORING STACK - Environment Configuration
# ═══════════════════════════════════════════════════════════════════════════

# Prometheus Configuration
PROMETHEUS_VERSION=v2.48.0
PROMETHEUS_RETENTION_TIME=15d
PROMETHEUS_RETENTION_SIZE=10GB
PROMETHEUS_SCRAPE_INTERVAL=15s
PROMETHEUS_EVALUATION_INTERVAL=15s
PROMETHEUS_QUERY_TIMEOUT=2m
PROMETHEUS_STORAGE_PATH=/prometheus

# Grafana Configuration
GRAFANA_VERSION=10.2.2
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=maximus_ai_3_0
GRAFANA_ALLOW_SIGN_UP=false
GRAFANA_ANONYMOUS_ENABLED=false
GRAFANA_DATA_PATH=/var/lib/grafana
GRAFANA_PLUGINS_PATH=/var/lib/grafana/plugins

# Grafana Security
GRAFANA_SECRET_KEY=change_this_in_production
GRAFANA_DISABLE_GRAVATAR=true
GRAFANA_COOKIE_SAMESITE=lax
GRAFANA_COOKIE_SECURE=false

# Grafana UI
GRAFANA_DEFAULT_THEME=dark
GRAFANA_TIMEZONE=browser
GRAFANA_HOME_DASHBOARD_ID=0

# Alerting Configuration
GRAFANA_ALERTING_ENABLED=true
GRAFANA_UNIFIED_ALERTING=true
PROMETHEUS_ALERTMANAGER_ENABLED=false

# Alert Channels (optional - configure as needed)
ALERT_SLACK_WEBHOOK_URL=
ALERT_EMAIL_FROM=maximus@example.com
ALERT_EMAIL_TO=ops@example.com
ALERT_SMTP_HOST=smtp.example.com
ALERT_SMTP_PORT=587
ALERT_SMTP_USER=
ALERT_SMTP_PASSWORD=

# Node Exporter Configuration
NODE_EXPORTER_VERSION=v1.7.0
NODE_EXPORTER_ENABLED_COLLECTORS=cpu,diskstats,filesystem,loadavg,meminfo,netdev,stat,time

# Service Discovery
ENABLE_SERVICE_DISCOVERY=true
SERVICE_DISCOVERY_INTERVAL=30s

# Data Retention
METRICS_RETENTION_DAYS=30
LOGS_RETENTION_DAYS=7

# Performance Tuning
PROMETHEUS_MAX_SAMPLES_PER_QUERY=500000
PROMETHEUS_QUERY_MAX_CONCURRENCY=20
GRAFANA_QUERY_CACHE_TTL=5m

# Network Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
NODE_EXPORTER_PORT=9100
ALERTMANAGER_PORT=9093

# Security
ENABLE_TLS=false
TLS_CERT_PATH=/certs/server.crt
TLS_KEY_PATH=/certs/server.key

# Logging
PROMETHEUS_LOG_LEVEL=info
GRAFANA_LOG_LEVEL=info
LOG_MODE=console

# Backup Configuration
ENABLE_AUTOMATED_BACKUP=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/backups
